datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator default {
  provider = "prisma-client-js"
}

model Section {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  subtitle    String?
  description String?
  heroImage   String?
  position    Int       @default(0)
  services    Service[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  section     Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId   String
  title       String
  summary     String
  body        String?
  imageUrl    String?
  highlights  Json?
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}